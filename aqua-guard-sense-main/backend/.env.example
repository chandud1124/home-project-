# Backend environment variables
# Copy to backend/.env and fill in secure values.

# Express server
PORT=3001
WS_PORT=8083
NODE_ENV=development

# Supabase
SUPABASE_URL=https://YOUR-PROJECT-REF.supabase.co
# Public anon key (safe for frontend but we keep here for parity)
SUPABASE_ANON_KEY=YOUR_PUBLIC_ANON_KEY
# Service role key (DO NOT expose to frontend or commit)
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY

# Logging
LOG_LEVEL=info

# Device authentication (optional HMAC enforcement)
DEVICE_HMAC_REQUIRED=false
HMAC_TIME_DRIFT_SECONDS=120
